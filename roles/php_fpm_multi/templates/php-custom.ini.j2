; Custom PHP settings for user: {{ item.0.username }}
; PHP Version: {{ item.1 }}

{% if item.0.php_custom_settings is defined %}
{% for setting_name, setting_value in item.0.php_custom_settings.items() %}
{{ setting_name }} = {{ setting_value }}
{% endfor %}
{% endif %}

; Additional timezone setting
date.timezone = {{ php_timezone | default('UTC') }}

; Error reporting (can be customized per user)
error_reporting = {{ php_error_reporting | default('E_ALL & ~E_DEPRECATED & ~E_STRICT') }}
display_errors = {{ php_display_errors | default('Off') }}
display_startup_errors = {{ php_display_startup_errors | default('Off') }}
